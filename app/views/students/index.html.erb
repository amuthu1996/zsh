<p id="notice"><%= notice %></p>

<h1>Listing Students</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Sname</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Cl_id</th>
      <th>Fname</th>
      <th>Mname</th>
      <th>Ph</th>
      <th>Address</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.id %></td>
        <td><%= student.sname %></td>
        <td><%= student.dob %></td>
        <td><%= student.gender %></td>
        <td><%= student.cl_id %></td>
        <td><%= student.fname %></td>
        <td><%= student.mname %></td>
        <td><%= student.ph %></td>
        <td><%= student.address %></td>
        
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
